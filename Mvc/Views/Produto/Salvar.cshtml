@model Dominio.Entidades.Produto


<h2>Produto</h2>


<form class="form-horizontal" asp-action="Salvar" asp-controller="Produto" method="Post">

    <input type="hidden" class="form-control" asp-for="Id">
    <div class="form-group" >
        <label class="col-md-1 control-label" for="Name">Name</label>
        <div class="col-md-1" >
            <input type="text" class="form-control" size="40" asp-for="Nome">
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-1 control-label" for="Name" > Categoria </label>
        <div class="col-md-2">
            <select class="form-control" asp-for="CategoriaId" 
                asp-items='@(new SelectList(@ViewBag.Categorias, "Id","Nome"))'>
            </select>
        </div>
    </div>

    <div class="form-group" >
        <div class="col-md-2" >
            <button class="btn btn-success">Save</button>
        </div>
    </div>

</form>